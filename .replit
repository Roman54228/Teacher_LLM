modules = ["python-3.11", "postgresql-16", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "libyaml", "openssh"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Main App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Admin Panel"

[[workflows.workflow]]
name = "FastAPI Main App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"
waitForPort = 5002

[[workflows.workflow]]
name = "FastAPI Admin Panel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 admin_fastapi.py"
waitForPort = 5003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3002

[agent]
integrations = ["flask_supabase==1.0.0"]
